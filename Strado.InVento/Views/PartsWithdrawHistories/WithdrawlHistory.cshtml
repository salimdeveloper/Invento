@model IEnumerable<Strado.InVento.Core.Models.PartsWithdrawHistory>
@{
    ViewBag.Title = "PartsList";
}

<div class="row">
    <section class="content-header"></section>
</div>
<div class="row">
    <div class="col-md-12">

        <!-- TABLE: LATEST ORDERS -->
        <div class="box">
            <div class="box-header with-border">
                <div class="row">
                    <div class="col-md-3 col-sm-6 pull-left">
                        <h3 class="box-title">Parts Details</h3>
                    </div>
                    <div class="col-md-3 col-sm-6 pull-right">
                        <a href="/PartsWithdrawHistories/Withdraw/">
                            <button type="button" class="btn btn-sm bg-green btn-flat pull-right">
                                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                                Withdraw Part
                            </button>
                        </a>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="clear"></div>
            <div class="box-body">
                <table id="DataTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>PartId #</th>
                            <th>Part Name</th>
                            <th>Date</th>
                            <th>Reason</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PartsId</td>
                                <td>@item.Parts.PartName</td>
                                <td>@item.SoldDate</td>
                                <td>@item.WithdrawlReason</td>
                                <td>@item.SoldPrice</td>
                                <td>@item.QtyWithdrawn</td>
                                <td>
                                    <a class="apadding5" title="Edit" href="@Url.Action("Edit","PartsWithdrawHistories", new { id=item.Id})">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="#" class="js-delete-withdraw apadding5" data-withdraw-id="@item.Id" data-toggle="modal">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th>PartId #</th>
                            <th>Part Name</th>
                            <th>Date</th>
                            <th>Reason</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {

            $(".js-delete-withdraw").click(function (e) {
                var dataVal = $(this).data("withdraw-id");
                var link = $(e.target);
                bootbox.dialog({
                    message: "Are you sure you want to delete this Withdrawl Record?",
                    title: "Confirm Delete",
                    buttons: {
                        no: {
                            label: "No",
                            ClassName: "btn-default",
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes",
                            className: "btn-danger",
                            callback: function () {
                                $.ajax({
                                    url: "/api/PartsWithdrawHistories/" + dataVal,
                                    method: "DELETE"
                                })
                            .done(function () {
                                link.parents("tr").fadeOut(function () {
                                    $(this).remove();
                                });
                            })
                            .fail(function (xhr, status, error) {
                                bootbox.dialog({
                                    message: "An internal server error has occured!",
                                    title: "Server Error",
                                    buttons: {
                                        yes: {
                                            label: "Close",
                                            ClassName: "btn-default",
                                            callback: function () {
                                                bootbox.hideAll();
                                            }
                                        }
                                    }
                                });
                            });
                            }
                        }
                    }
                });
            });
        });
    </script>
}