@model IEnumerable<Strado.InVento.Core.Models.Parts>
@{
    ViewBag.Title = "PartsList";
}

 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Parts List
           
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Parts Lists</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>Part Name</th>
                                    <th>Part Image</th>
                                    <th>Details</th>
                                    <th>Category</th>
                                    <th>Brand</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var part in Model)
                                {
                                <tr>
                                    <td>@part.PartName</td>
                                    <td><img width="100" height="100" class="img-circle" src=@Url.Content(part.PartImageUrl) /></td>
                                    <td>@part.PartDetails</td>
                                    <td>@part.Categories.CategoryName</td>
                                    <td>@part.Brands.BrandName</td>
                                    <td>
                                        <a  href="@Url.Action("Edit","Brands", new { id=part.Id})">
                                            <i class="fa fa-fw fa-pencil-square-o"></i> 
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#" class="js-delete-part" data-part-id="@part.Id" data-toggle="modal">
                                            <i class="fa fa-fw fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                               
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Part Name</th>
                                    <th>Part Image</th>
                                    <th>Details</th>
                                    <th>Category</th>
                                    <th>Brand</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section scripts
{
 <script>
     $(document).ready(function () {
         $(".js-delete-part").click(function (e) {
             var link = $(e.target);
             bootbox.dialog({
                 message: "Are you sure you want to delete this brand?",
                 title: "Confirm",
                 buttons: {
                     no: {
                         label: "No",
                         ClassName: "btn-default",
                         callback: function () {
                             bootbox.hideAll();
                         }
                     },
                     yes: {
                         label: "Yes",
                         className: "btn-danger",
                         callback: function () {
                             $.ajax({
                                 url: "/api/parts/" + link.attr("data-part-id"),
                                 method: "DELETE"
                             })

                         .done(function () {
                             link.parents("tr").fadeOut(function () {
                                 $(this).remove();
                             });
                         })
                         .fail(function () {
                                  alert("Somthing failed!");
                         });
                         }
                     }
                 }
             });
         });
     });

    </script>

}