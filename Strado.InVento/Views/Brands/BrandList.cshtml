@model IEnumerable<Strado.InVento.Core.Models.Brand>
@{
    ViewBag.Title = "BrandList";
}



<!-- left column -->
<div class="col-md-12">


    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Brands List</h3>

            <div class="box-tools">
                <ul class="pagination pagination-sm no-margin pull-right">
                    <li><a href="#">&laquo;</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">&raquo;</a></li>
                </ul>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-bordered table-striped table-responsive">
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Brand Name</th>
                    <th>Brand Logo</th>
                    <th style="width: 40px">Edit</th>
                    <th style="width: 40px">Delete</th>
                </tr>
                @foreach (var brand in Model)
                {
                    <tr>
                        <td>@brand.Id</td>
                        <td>@brand.BrandName</td>
                        <td><img width="100" height="100" class="img-circle" src=@Url.Content(@brand.LogoImgSrc) /></td>
                        <td>
                            <a class="btn" href="@Url.Action("Edit","Brands", new { id=brand.Id})">
                                <i class="fa fa-fw fa-pencil-square-o"></i>
                            </a>
                        </td>
                        <td>
                            <a href="#" class="js-delete-brand btn" data-brand-id="@brand.Id" data-toggle="modal">
                                <i class="fa fa-fw fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-delete-brand").click(function (e) {
                var link = $(e.target);
                //modal.show();
                bootbox.dialog({
                    message: "Are you sure you want to delete this brand?",
                    title: "Confirm",
                    buttons: {
                        no: {
                            label: "No",
                            ClassName: "btn-default",
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes",
                            className: "btn-danger",
                            callback: function () {
                                $.ajax({
                                    url: "/api/brands/" + link.attr("data-brand-id"),
                                    method: "DELETE"
                                })
                                .done(function () {
                                    link.parents("tr").fadeOut(function () {
                                        $(this).remove();
                                    });
                                })
                                 .fail(function () {
                                     alert("Somthing failed!");
                                 });
                            }
                        }
                    }
                });

            });
        });

        

    </script>
}